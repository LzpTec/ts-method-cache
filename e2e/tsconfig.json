{
  "compilerOptions": {
    "baseUrl": "",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node"
    ],
    "lib": [
      "es2017", "dom"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "src/index.ts"
  ],
  "exclude": [
  ".idea",
  "e2e",
  "dist",
  "coverage",
  "node_modules"
]
}