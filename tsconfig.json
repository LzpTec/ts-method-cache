{
  "compilerOptions": {
    "baseUrl": "",
    "target": "ES2018",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "stripInternal": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "ES2018",
      "dom"
    ]
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "includeDefinition": [
    "./src/**/*"
  ],
  "exclude": [
    ".idea",
    "e2e",
    "dist",
    "coverage",
    "node_modules"
  ]
}