{
  "compilerOptions": {
    "baseUrl": "",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node"
    ],
    "lib": [
      "es2015"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "includeDefinition": [
    "./src/**/*"
  ]
}